{
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "compilerOptions": {
      "moduleResolution": "Node16",
      "baseUrl": ".",
      "paths": {
        "@/services/*": ["services/*"]
      }
    },
    "require": ["tsconfig-paths/register"]
  },
  "include": ["services/**/*.ts"],
  "exclude": ["node_modules", ".vscode"]
}
